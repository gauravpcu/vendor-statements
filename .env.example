# Vendor Statements Application Configuration

# ===== AWS S3 Configuration =====
# S3 Bucket for storing templates and files
AWS_S3_BUCKET_NAME=your-vendor-statements-bucket
AWS_REGION=us-east-1

# AWS Credentials (can also use IAM roles)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Storage Configuration
STORAGE_MODE=local  # 'local' or 's3' - set to 's3' to enable S3 storage
# STORAGE_MODE=s3   # Uncomment to enable S3 storage

# S3 Prefixes for organizing files (optional - defaults provided)
S3_TEMPLATES_PREFIX=templates/
S3_UPLOADS_PREFIX=uploads/
S3_PROCESSED_PREFIX=processed/
S3_CACHE_PREFIX=cache/

# File Settings
MAX_FILE_SIZE=50  # MB
PRESIGNED_URL_EXPIRATION=3600  # seconds (1 hour)

# Local Fallback Directories (used when STORAGE_MODE=local)
LOCAL_TEMPLATES_DIR=templates
LOCAL_UPLOADS_DIR=uploads

# ===== Azure OpenAI Configuration =====
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# ===== Application Configuration =====
FLASK_ENV=development
FLASK_DEBUG=True

# Invoice Validation API (optional)
INVOICE_VALIDATION_API_URL=https://your-validation-api.com/validate

# ===== AWS Lambda Configuration (for deployment) =====
# These are used when deploying to AWS Lambda
LAMBDA_FUNCTION_NAME=vendor-statements-processor
LAMBDA_ROLE_ARN=arn:aws:iam::your-account:role/lambda-execution-role
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=1024

# ===== Database Configuration (if needed in future) =====
# DATABASE_URL=postgresql://user:password@localhost:5432/vendor_statements
# REDIS_URL=redis://localhost:6379/0