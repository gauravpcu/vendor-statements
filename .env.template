# =============================================================================
# VENDOR STATEMENTS PROCESSOR - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values

# Flask Application Settings
FLASK_ENV=production
FLASK_APP=app.py
PYTHONPATH=/app

# =============================================================================
# AZURE OPENAI CONFIGURATION (REQUIRED for AI features)
# =============================================================================
# Get these from your Azure OpenAI resource in Azure Portal
AZURE_OAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OAI_KEY=your-azure-openai-api-key-here
AZURE_OAI_DEPLOYMENT_NAME=your-gpt-deployment-name
AZURE_OAI_API_VERSION=2024-02-15-preview

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_DEFAULT_REGION=us-east-1
AWS_REGION=us-east-1

# Storage Configuration
STORAGE_MODE=s3

# S3 Storage Configuration
AWS_S3_BUCKET_NAME=your-s3-bucket-name
S3_BUCKET_NAME=your-s3-bucket-name
S3_TEMPLATES_PREFIX=templates/
S3_UPLOADS_PREFIX=uploads/
S3_PROCESSED_PREFIX=processed/
S3_CACHE_PREFIX=cache/

# AWS Credentials (Optional - EC2 instance role is preferred)
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# =============================================================================
# EXTERNAL API CONFIGURATION (Optional)
# =============================================================================
# Invoice Validation API (if you have one)
INVOICE_VALIDATION_API_URL=https://your-validation-api.com/validate
INVOICE_VALIDATION_API_KEY=your-validation-api-key

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application Configuration
SECRET_KEY=your-secret-key-for-production
MAX_FILE_SIZE=50
PRESIGNED_URL_EXPIRATION=3600
MAX_UPLOAD_FILES=10
PROCESSING_TIMEOUT=300
LOG_LEVEL=INFO

# Port for the application
PORT=8000